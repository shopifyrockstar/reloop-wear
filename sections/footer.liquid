        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "default": "Newsletter"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content",
          "default": "<p>A short sentence describing what someone will receive by subscribing</p>"
        }
      ]
    },
      {
      "type": "bottom_links",
      "name": "Bottom Link",
      "settings": [
        {
          "type": "text",
          "id": "bottom_title",
          "label": "Title",
