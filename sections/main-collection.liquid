      "info": "Featured Menu",
      "label": "Featured"
    },
     {
      "type": "link_list",
      "id": "category_links",
      "info": "Category Menu",
      "label": "By Category"
    },
     {
      "type": "link_list",
      "id": "other_links",
      "info": "Other Links",
